<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.liberty.jiaoxiaotong.RewardPunishActivity">

    <EditText
        android:id="@+id/editText_studentID"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="57dp"
        android:ems="10"
        android:hint="学号"
        android:inputType="textPersonName"
        android:text="" />

    <EditText
        android:id="@+id/editText_rewardpunish"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/editText_studentID"
        android:layout_alignStart="@+id/editText_studentID"
        android:layout_below="@+id/editText_studentID"
        android:layout_marginTop="64dp"
        android:ems="10"
        android:hint="奖惩记录"
        android:inputType="textPersonName"
        android:text="" />

    <Button
        android:id="@+id/button_submit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/editText_rewardpunish"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="49dp"
        android:text="提交" />
</RelativeLayout>
