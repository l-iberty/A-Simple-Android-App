<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.liberty.jiaoxiaotong.SchoolRegistActivity">

    <TextView
        android:id="@+id/textView_tips"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="55dp"
        android:text="输入以下信息完成注册" />

    <EditText
        android:id="@+id/editText_schooID"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="58dp"
        android:ems="10"
        android:hint="学校ID"
        android:inputType="textPersonName"
        android:layout_below="@+id/textView_tips"
        android:layout_centerHorizontal="true" />

    <EditText
        android:id="@+id/editText_schoolName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="22dp"
        android:ems="10"
        android:hint="学校名称"
        android:inputType="textPersonName"
        android:layout_below="@+id/editText_schooID"
        android:layout_alignLeft="@+id/editText_schooID"
        android:layout_alignStart="@+id/editText_schooID" />

    <EditText
        android:id="@+id/editText_passwd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="17dp"
        android:ems="10"
        android:hint="账号密码"
        android:inputType="textPassword"
        android:layout_below="@+id/editText_schoolName"
        android:layout_alignLeft="@+id/editText_schoolName"
        android:layout_alignStart="@+id/editText_schoolName" />

    <EditText
        android:id="@+id/editText_passwdConfirm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/editText_passwd"
        android:layout_alignStart="@+id/editText_passwd"
        android:layout_below="@+id/editText_passwd"
        android:layout_marginTop="18dp"
        android:ems="10"
        android:hint="确认密码"
        android:inputType="textPassword" />

    <Button
        android:id="@+id/button_submit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/editText_passwdConfirm"
        android:layout_alignLeft="@+id/editText_passwdConfirm"
        android:layout_alignRight="@+id/editText_passwdConfirm"
        android:layout_alignStart="@+id/editText_passwdConfirm"
        android:layout_below="@+id/editText_passwdConfirm"
        android:layout_marginTop="37dp"
        android:text="提交" />
</RelativeLayout>
